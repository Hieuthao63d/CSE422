@model IEnumerable<Lab2.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                <span class="text-warning"><i class="bi bi-people-fill me-2"></i></span>User Management
            </h2>
            <p class="text-muted mb-0">Manage system access and employee details.</p>
        </div>
        <a asp-action="Create" class="btn btn-warning btn-lg shadow-sm rounded-pill px-4 fw-bold">
            <i class="bi bi-person-plus-fill me-1"></i> Add New User
        </a>
    </div>

    <div class="card border-0 shadow rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase text-secondary small fw-bold">
                        <tr>
                            <th class="py-3 ps-4">User Profile</th>
                            <th class="py-3">Contact Info</th>
                            <th class="py-3 text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center py-5 text-muted">
                                    <i class="bi bi-person-x fs-1 d-block mb-2"></i>
                                    No users found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-warning bg-opacity-25 text-warning fw-bold d-flex justify-content-center align-items-center me-3"
                                                 style="width: 45px; height: 45px; font-size: 1.2rem;">
                                                @(item.FullName?.Substring(0, 1).ToUpper() ?? "U")
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@item.FullName</div>
                                                <span class="badge bg-light text-secondary border">ID: @item.Id</span>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex flex-column gap-1">
                                            <a href="mailto:@item.Email" class="text-decoration-none text-secondary">
                                                <i class="bi bi-envelope-fill text-muted me-2"></i>@item.Email
                                            </a>
                                            <a href="tel:@item.PhoneNumber" class="text-decoration-none text-secondary">
                                                <i class="bi bi-telephone-fill text-muted me-2"></i>@item.PhoneNumber
                                            </a>
                                        </div>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Edit Profile">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Remove User">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>