@model IEnumerable<Lab2.Models.DeviceCategory>

@{
    ViewData["Title"] = "Device Categories";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-success mb-0"><i class="bi bi-tags-fill me-2"></i>Device Categories</h2>
            <p class="text-muted mb-0">Organize your devices into logical groups.</p>
        </div>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-circle me-1"></i> Add New Category
        </a>
    </div>

    <div class="card border-0 shadow rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-uppercase text-secondary small fw-bold">
                        <tr>
                            <th class="py-3 ps-4" style="width: 10%;">ID</th>
                            <th class="py-3" style="width: 30%;">Category Name</th>
                            <th class="py-3" style="width: 40%;">Description</th>
                            <th class="py-3 text-end pe-4" style="width: 20%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted">
                                    <i class="bi bi-folder-x fs-1 d-block mb-2"></i>
                                    No categories found. Start by adding one!
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <span class="badge bg-light text-dark border border-secondary font-monospace">
                                            #@item.Id
                                        </span>
                                    </td>
                                    <td>
                                        <span class="fw-semibold text-success">
                                            <i class="bi bi-bookmark-fill me-1"></i> @item.Name
                                        </span>
                                    </td>
                                    <td class="text-muted text-truncate" style="max-width: 300px;">
                                        @if (string.IsNullOrEmpty(item.Description))
                                        {
                                            <span class="fst-italic text-black-50">No description provided</span>
                                        }
                                        else
                                        {
                                            @item.Description
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>