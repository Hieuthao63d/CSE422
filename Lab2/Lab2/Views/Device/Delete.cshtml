@model Lab2.Models.Device

<div class="container mt-4">
    <h2 class="text-danger">Delete Device</h2>
    <h4>Are you sure you want to delete: <strong>@Model.Name</strong>?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@(Model.Category?.Name ?? "Unknown")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>