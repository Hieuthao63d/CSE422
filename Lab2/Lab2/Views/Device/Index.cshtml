@model IEnumerable<Lab2.Models.Device>
@using Lab2.Models

@{
    ViewData["Title"] = "Device Management";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0"><i class="bi bi-laptop me-2"></i>Device List</h2>
            <p class="text-muted mb-0">Manage and track your equipment efficiently.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4">
            <i class="bi bi-plus-lg me-1"></i> Add New Device
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <h5 class="card-title fw-bold mb-3 text-secondary"><i class="bi bi-funnel me-2"></i>Filter & Search</h5>
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" class="form-control border-start-0 ps-0"
                               placeholder="Search by Name or Code..." value="@ViewBag.CurrentSearch" />
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">-- All Categories --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<DeviceStatus>()">
                        <option value="">-- All Statuses --</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100 fw-bold">Apply Filter</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-uppercase text-secondary small fw-bold">
                    <tr>
                        <th class="py-3 ps-4">Name</th>
                        <th class="py-3">Code</th>
                        <th class="py-3">Category</th>
                        <th class="py-3 text-center">Status</th>
                        <th class="py-3">Date Entry</th>
                        <th class="py-3 text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No devices found matching your criteria.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-semibold text-dark">@item.Name</td>
                                <td>
                                    <span class="badge bg-light text-dark border border-secondary font-monospace">
                                        @item.Code
                                    </span>
                                </td>
                                <td>
                                    <span class="text-secondary"><i class="bi bi-tag-fill me-1"></i>@(item.Category?.Name ?? "N/A")</span>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == DeviceStatus.InUse)
                                    {
                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success border border-success px-3 py-2">
                                            <i class="bi bi-check-circle-fill me-1"></i> In Use
                                        </span>
                                    }
                                    else if (item.Status == DeviceStatus.Broken)
                                    {
                                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger border border-danger px-3 py-2">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i> Broken
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning border border-warning px-3 py-2">
                                            <i class="bi bi-tools me-1"></i> Maintenance
                                        </span>
                                    }
                                </td>
                                <td class="text-muted small">@item.DateOfEntry.ToString("dd MMM, yyyy")</td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>