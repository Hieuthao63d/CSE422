@{
    ViewData["Title"] = "Dashboard";
}

<div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center">
    <div class="container-fluid py-3">
        <h1 class="display-5 fw-bold text-primary">Device Management System</h1>
        <p class="col-md-8 fs-4 mx-auto text-muted">
            Hệ thống quản lý thiết bị tập trung, giúp theo dõi trạng thái, phân loại và phân quyền sử dụng thiết bị hiệu quả.
        </p>
        <a class="btn btn-primary btn-lg mt-3" asp-controller="Device" asp-action="Index" role="button">
            Start Managing Devices
        </a>
    </div>
</div>

<div class="row align-items-stretch">
    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm border-0 hover-effect">
            <div class="card-body text-center">
                <div class="mb-3 text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-laptop" viewBox="0 0 16 16">
                        <path d="M13.5 3a.5.5 0 0 1 .5.5V11H2V3.5a.5.5 0 0 1 .5-.5h11zm-11-1A1.5 1.5 0 0 0 1 3.5V12h14V3.5A1.5 1.5 0 0 0 13.5 2h-11zM0 12.5h16a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5z" />
                    </svg>
                </div>
                <h3 class="card-title">Devices</h3>
                <p class="card-text text-muted">Quản lý danh sách thiết bị, tìm kiếm, lọc theo trạng thái và thêm mới thiết bị.</p>
            </div>
            <div class="card-footer bg-white border-0 text-center pb-3">
                <a asp-controller="Device" asp-action="Index" class="btn btn-outline-primary w-75">View Devices</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm border-0 hover-effect">
            <div class="card-body text-center">
                <div class="mb-3 text-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-tags" viewBox="0 0 16 16">
                        <path d="M3 2v4.586l7 7L14.586 9l-7-7H3zM2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2z" />
                        <path d="M5.5 5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm0 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zM1 7.086a1 1 0 0 0 .293.707L8.75 15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1v5.086z" />
                    </svg>
                </div>
                <h3 class="card-title">Categories</h3>
                <p class="card-text text-muted">Phân loại thiết bị (Máy tính, Máy in,...) giúp quản lý hệ thống khoa học hơn.</p>
            </div>
            <div class="card-footer bg-white border-0 text-center pb-3">
                <a asp-controller="DeviceCategory" asp-action="Index" class="btn btn-outline-success w-75">Manage Categories</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm border-0 hover-effect">
            <div class="card-body text-center">
                <div class="mb-3 text-warning">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                        <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8zm-7.978-1A.2.2 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.2.2 0 0 1-.197.15h-6.83a.2.2 0 0 1-.186-.149z" />
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path d="M2 13c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4z" />
                    </svg>
                </div>
                <h3 class="card-title">Users</h3>
                <p class="card-text text-muted">Quản lý nhân viên và người dùng được cấp phát sử dụng thiết bị.</p>
            </div>
            <div class="card-footer bg-white border-0 text-center pb-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-warning w-75">Manage Users</a>
            </div>
        </div>
    </div>
</div>

